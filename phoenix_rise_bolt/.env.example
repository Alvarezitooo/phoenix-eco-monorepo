# Phoenix Rise & Dojo Mental - Environment Variables
# Copy this file to .env and update the values

# =============================================================================
# BACKEND API CONFIGURATION
# =============================================================================

# Security
SECRET_KEY=phoenix_rise_super_secret_key_change_in_production
ENCRYPTION_KEY=your-fernet-encryption-key-here

# Debug mode (set to false in production)
DEBUG=true

# Database
DATABASE_URL=postgresql+asyncpg://phoenix:phoenix_dev_2025@localhost:5432/phoenix_rise

# Redis
REDIS_URL=redis://localhost:6379

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# =============================================================================
# SUPABASE CONFIGURATION  
# =============================================================================

# Get these from your Supabase project settings
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here
SUPABASE_JWT_SECRET=your-jwt-secret-here

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================

# API endpoint
NEXT_PUBLIC_API_URL=http://localhost:8000

# Supabase public configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-public-key-here

# =============================================================================
# EMAIL CONFIGURATION (Development)
# =============================================================================

# Mailhog for local development
MAILHOG_HOST=localhost
MAILHOG_PORT=1025

# =============================================================================
# AI PROVIDERS (Future use)
# =============================================================================

# OpenAI (optional)
OPENAI_API_KEY=your-openai-api-key-here

# Google Gemini (optional)
GEMINI_API_KEY=your-gemini-api-key-here

# =============================================================================
# PRODUCTION ONLY
# =============================================================================

# Allowed hosts (comma-separated)
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com

# CORS origins (comma-separated)  
CORS_ORIGINS=http://localhost:3000,https://your-domain.com

# SSL/TLS
FORCE_SSL=false

# Monitoring
SENTRY_DSN=your-sentry-dsn-here