{
  "$schema": "https://railway.app/railway.schema.json",
  "services": [
    {
      "name": "phoenix-letters",
      "rootDirectory": "apps/phoenix-letters",
      "build": {
        "builder": "DOCKERFILE",
        "dockerfilePath": "Dockerfile",
        "buildCommand": "cp -r ../packages ./"
      },
      "deploy": {
        "numReplicas": 1,
        "sleepApplication": false,
        "restartPolicyType": "ON_FAILURE"
      }
    },
    {
