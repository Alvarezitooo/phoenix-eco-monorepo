# üåÖ Phoenix Rise - Dockerfile DevSecOps
FROM python:3.11-slim

# M√©tadonn√©es s√©curit√©
LABEL maintainer="Phoenix DevSecOps Team"
LABEL version="1.0"
LABEL description="Phoenix Rise - Coaching mental et d√©veloppement personnel IA"

# Variables d'environnement s√©curis√©es
ENV PYTHONUNBUFFERED=1
ENV PYTHONDONTWRITEBYTECODE=1
ENV PIP_NO_CACHE_DIR=1
ENV STREAMLIT_SERVER_PORT=8501
ENV STREAMLIT_SERVER_ADDRESS=0.0.0.0

# Utilisateur non-root pour s√©curit√©
RUN groupadd -r phoenix && useradd -r -g phoenix phoenix

# Installation d√©pendances syst√®me
RUN apt-get update && apt-get install -y \
    curl \
    gcc \
    && rm -rf /var/lib/apt/lists/* \
    && apt-get clean

# R√©pertoire de travail
WORKDIR /app

# Copie et installation requirements
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Installation streamlit et d√©pendances coaching
RUN pip install streamlit>=1.28.0 plotly pandas

# Copie du code source
COPY . .

# Changement de propri√©taire
RUN chown -R phoenix:phoenix /app

# R√©pertoires pour donn√©es temporaires
RUN mkdir -p /app/data /app/logs /app/sessions && chown -R phoenix:phoenix /app/data /app/logs /app/sessions

# Port d'exposition
EXPOSE 8501

# Utilisateur non-root
USER phoenix

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=60s --retries=3 \
  CMD curl -f http://localhost:8501/_stcore/health || exit 1

# Script de d√©marrage
COPY --chown=phoenix:phoenix start.sh /app/start.sh
RUN chmod +x /app/start.sh

# Commande de d√©marrage
CMD ["./start.sh"]